{
  "name": "docker-mcp-server",
  "version": "2.0.0",
  "description": "A comprehensive, production-ready MCP Server for Docker management with 36 tools and advanced features",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "docker-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "npm run build && npm run start",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "docker",
    "containers",
    "docker-compose",
    "ai",
    "copilot",
    "claude",
    "vscode"
  ],
  "author": "Swartdraak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Swartdraak/Docker-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/Swartdraak/Docker-MCP/issues"
  },
  "homepage": "https://github.com/Swartdraak/Docker-MCP#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/tar-fs": "^2.0.4",
    "dockerode": "^4.0.2",
    "tar-fs": "^3.1.1"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.31",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "glob": "10.4.5"
  }
}
